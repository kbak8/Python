ctr = 0

loan = float(input("Enter amount of loan: ")) 

while loan > 0:
    ctr = ctr + 1
    month = float(input("Enter this months payment: "))
    balance = loan - month
    charge = balance * .01
    loan = charge + balance
    print("Amount still due is: ",loan)
    if loan <= 0:
        break

